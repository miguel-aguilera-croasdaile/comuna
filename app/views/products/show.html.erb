      <%# <%= hidden_field_tag 'product_id', @product.id %>
      <%# <%= submit_tag 'Add to Cart', class: 'button primary-button wide-button' %>
      <%# <% end %>
      <%# <% end %>
      <hr>
      <% unless @product.description.blank? %>
        <p> <%= simple_format @product.description %> </p>
        <hr>
      <% end %>
      <% unless @product.brand.blank? %>
        <p> Brand: <%= @product.brand %>  </p>
      <% end %>
      <% unless @product.material.blank? %>
        <p> Material: <%= @product.material %>  </p>
      <% end %>
      <% unless @product.year.blank? %>
        <p> Year: <%= @product.year %>  </p>
      <% end %>
      <% unless @product.size.blank? %>
        <p> Size: <%= @product.size %>  </p>
      <% end %>
      <% unless @product.color.blank? %>
        <p> Color: <%= @product.color %>  </p>
      <% end %>
      <% unless @product.condition.blank? %>
        <p> Condition: <%= @product.condition %>  </p>
      <% end %>
      <% unless @product.measurements.blank? %>
        <p> Measurements: <%= @product.measurements %>  </p>
      <% end %>
      <hr>
      <p>All vintages sales are final.</p>
      <p>With a PayPal account, you're eligible for Purchase Protection and Rewards. </p>
    </div>
  </div>
